<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeberSemana6.DatosEliminar">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Eliminar Estudiante" FontSize="20" HorizontalTextAlignment="Center" FontAttributes="Bold" />
            <Image Source="vacuna.png" HorizontalOptions="Center" WidthRequest="80" HeightRequest="80" />

            <Label />
            <Label x:Name="lblCodigo" HorizontalTextAlignment="Center" FontSize="20" />
            <Label x:Name="lblNombre" HorizontalTextAlignment="Center" FontSize="20" />
            <Label x:Name="lblApellido" HorizontalTextAlignment="Center" FontSize="20" />
            <Label x:Name="lblEdad" HorizontalTextAlignment="Center" FontSize="20" />

            <Button x:Name="btnEliminar" Text="Eliminar" Clicked="btnEliminar_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>